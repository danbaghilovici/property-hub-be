{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "property": {
      "type": "application",
      "root": "apps/property",
      "entryFile": "property",
      "sourceRoot": "apps/property/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/property/tsconfig.app.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "agent": {
      "type": "application",
      "root": "apps/agent",
      "entryFile": "agent",
      "sourceRoot": "apps/agent/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/agent/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "auth",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "test": {
      "type": "application",
      "root": "apps/test",
      "entryFile": "main",
      "sourceRoot": "apps/test/src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "apps/test/tsconfig.app.json"
      }
    }
  }
}
